<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<!--
init-method : 初始化
destroy-method： 销毁
springt 会在对应的时间节点  在ioc容器中会掉对应的方法
-->

    <bean id="javaBean" class="org.example.ioc_04.JavaBean"  init-method="init" destroy-method="clear"/>
<!--    声明一个组件信息 默认就是单例模式 singleon prototype 多例-->
    <bean id="javaBean2" class="org.example.ioc_04.JavaBean2" scope="prototype"/>
</beans>